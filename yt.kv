#:import utils kivy.utils

MyGrid:
    link: link
    op_input: op_input
    update_label: update_label
    download_button: download_button


    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.main_canv_image
    GridLayout:

        size: root.width - 200, root.height - 200
        pos: 100, 100
        cols: 1
        spacing: 30
        Image:
            source: root.yt_logo

        GridLayout:
            cols:1
            spacing: 40

            GridLayout:
                cols:1
                spacing: 5

                TextInput:
                    id: op_input
                    multiline:False
                    padding: (5, 10, 5, 5)
                    size_hint: (.2, None)
                    height: 40
                    hint_text:"Specify folder name here"

                TextInput:
                    id: link
                    hint_text:"Type song name here"
                    multiline: False
                    padding: (5, 10, 5, 5)
                    size_hint: (1, None)
                    height: 40


            GridLayout:
                pos: 100, 100
                cols: 1
                Button:
                    id: download_button
                    text: "Download Clean Audio"
                    #size_hint: (.4, 1)
                    font_size_hint: 12
                    #height: 40
                    #width: 200
                    on_press: update_label.text = 'Searching...'
                    on_release: root.download_button_action()

                Label:
                    id: update_label
                    text: ''
                    font_size: 12
                    color: utils.get_color_from_hex('#DDDDDD')