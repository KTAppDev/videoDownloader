#:import utils kivy.utils
BoxLayoutUI:

<BoxLayoutUI>:
    link: link
    op_input: op_input
    update_label: update_label
    download_button: download_button


    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.main_canv_image
    spacing: '5dp'
    orientation: 'vertical'

    Image:
        size_hint: (1, 1)
        pos_hint: {'center_x': .5}
        source: root.yt_logo
    Label:
        id: update_label2
        text: 'Song will be saved to desktop/youtube'
        #font_size: 8
        color: utils.get_color_from_hex('#808080')
        size_hint: .9, None
        pos_hint: {'center_x': .5}
        height: '20dp'

    TextInput:
        id: op_input
        multiline:False
        padding: (5, 10, 5, 5)
        pos_hint: {'center_x': .5}
        size_hint: (.8, None)
        height: '40dp'
        hint_text:"Specify folder name here"

    TextInput:
        id: link
        hint_text:"Type song name here"
        multiline: False
        padding: (5, 10, 5, 5)
        pos_hint: {'center_x': .5}
        size_hint: (.8, None)
        height: '40dp'
        on_text_validate: root.download_button_action()

    Button:
        background_normal: ''
        background_color: .75, 0, 0, 1
        id: download_button
        pos_hint: {'center_x': .5}
        bold: True
        size_hint: (None, None)
        text: "Download Clean Audio"
        height: '40dp'
        width: '200dp'
        on_press: update_label.text = 'Searching...'
        on_release: root.download_button_action()

    Label:
        id: update_label
        text: 'Please enter a song name and artiste'
        #font_size: 12
        color: utils.get_color_from_hex('#DDDDDD')
        size_hint: .9, None
        pos_hint: {'center_x': .5}
        height: '40dp'



